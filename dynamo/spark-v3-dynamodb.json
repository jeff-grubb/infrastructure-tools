{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "DynamoDB Tables V3",
  "Parameters": {
    "APIName": {
      "Description": "API name",
      "Type": "String",
      "AllowedValues": [
        "fs",
        "fn",
        "fb",
        "ok",
        "fw",
        "ftn",
        "fts",
        "wtxf",
        "ktvu",
        "wnyw",
        "wwor",
        "kttv",
        "wfld",
        "kdfw",
        "wttg",
        "kriv",
        "waga",
        "wtvt",
        "ksaz",
        "wjbk",
        "kmsp",
        "wofl",
        "ktbc",
        "wogx",
        "witi",
        "kcpq",
        "lnfx"
      ]
    },
    "Environment": {
      "Description": "Environment for deployment",
      "Type": "String",
      "AllowedValues": [
        "dev",
        "stage",
        "prod"
      ],
      "Default": "dev"
    },
    "CloudformationTemplateSource": {
      "Description": "The Cloudformation template source in the S3 bucket",
      "Type": "String"
    }
  },
  "Resources": {
    "SPARKV3LAYOUTS": {
      "Type": "AWS::DynamoDB::Table",
      "DeletionProtectionEnabled": "true",
      "Properties": {
        "TableName": {
          "Fn::Sub": [
            "${env}-${api}-spark-v3-layouts",
            {
              "env": {
                "Ref": "Environment"
              },
              "api": {
                "Ref": "APIName"
              }
            }
          ]
        },
        "KeySchema": [
          {
            "KeyType": "HASH",
            "AttributeName": "spark_id"
          },
          {
            "KeyType": "RANGE",
            "AttributeName": "post_status"
          }
        ],
        "AttributeDefinitions": [
          {
            "AttributeName": "spark_id",
            "AttributeType": "S"
          },
          {
            "AttributeName": "post_status",
            "AttributeType": "S"
          },
          {
            "AttributeName": "network",
            "AttributeType": "S"
          },
          {
            "AttributeName": "type",
            "AttributeType": "S"
          },
          {
            "AttributeName": "element_id",
            "AttributeType": "S"
          }
        ],
        "StreamSpecification": {
          "StreamViewType": "NEW_AND_OLD_IMAGES"
        },
        "GlobalSecondaryIndexes": [
          {
            "IndexName": "network-index",
            "Projection": {
              "ProjectionType": "ALL"
            },
            "KeySchema": [
              {
                "KeyType": "HASH",
                "AttributeName": "network"
              },
              {
                "KeyType": "RANGE",
                "AttributeName": "spark_id"
              }
            ]
          },
          {
            "IndexName": "type-index",
            "Projection": {
              "ProjectionType": "ALL"
            },
            "KeySchema": [
              {
                "KeyType": "HASH",
                "AttributeName": "type"
              },
              {
                "KeyType": "RANGE",
                "AttributeName": "spark_id"
              }
            ]
          },
          {
            "IndexName": "element_id-index",
            "Projection": {
              "ProjectionType": "ALL"
            },
            "KeySchema": [
              {
                "KeyType": "HASH",
                "AttributeName": "element_id"
              },
              {
                "KeyType": "RANGE",
                "AttributeName": "spark_id"
              }
            ]
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "SSESpecification": {
          "SSEEnabled": "true",
          "SSEType": "KMS"
        },
        "PointInTimeRecoverySpecification": {
          "PointInTimeRecoveryEnabled": "true"
        }
      }
    },
